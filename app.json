{
  "expo": {
    "name": "uniform-check",
    "slug": "uniform-check",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "uniformcheck",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "ใช้กล้องเพื่อตรวจสอบเครื่องแต่งกาย",
        "NSPhotoLibraryUsageDescription": "อนุญาตเข้าถึงรูปภาพเพื่อเลือกภาพมาตรวจสอบ",
        "NSPhotoLibraryAddUsageDescription": "อนุญาตบันทึกรูปลงคลังรูปภาพ" 
      }
    },

    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,

      /* ระบุ permission ชัดเจนสำหรับกล้องและรูปภาพ
         - READ_MEDIA_IMAGES: Android 13+
         - READ_EXTERNAL_STORAGE: สำหรับเครื่องรุ่นเก่า
         (Expo จะรวมเฉพาะที่จำเป็นตามเวอร์ชันเครื่องเวลาสร้างแอป) */
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": { "backgroundColor": "#000000" }
        }
      ],
      "expo-asset"
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}

